{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Project1 JSON Schema",
  "type": "object",
  "required": [ "code", "evaluations" ],
  "properties": {
    "code": {
      "type": "string",
      "pattern": "^[A-Z]{4}-[0-9]{4}$",
      "description": "Course Code in formate UUUU-#### where U is uppercase letters and # is course number"
    },
    "evaluations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "description", "weight", "outOf", "earnedMarks" ],
        "properties": {
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Description of the evaluation"
          },
          "weight": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "description": "Weight of the evaluation in percentage"
          },
          "outOf": {
            "type": "integer",
            "minimum": 1,
            "description": "Total marks for the evaluation"
          },
          "earnedMarks": {
            "type": [ "number", "null" ],
            "minimum": 0,
            "description": "Marks earned in the evaluation"
          }
        }
      }
    }
  }
}